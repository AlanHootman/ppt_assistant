{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "启动FastAPI后端服务",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "args": [
                "apps.api.main:app",
                "--reload",
                "--host", "0.0.0.0",
                "--port", "8000"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "启动Celery Worker",
            "type": "python",
            "request": "launch",
            "module": "celery",
            "args": [
                "-A", "apps.api.celery_app:celery_app",
                "worker",
                "--loglevel=info",
                "--concurrency=1",
                "--pool=solo",
                "-Q", "celery,template_analysis,ppt_generation"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "运行PPT工作流",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/run_workflow.py",
            "args": [
                "--markdown", "tests/testfiles/技术思维五导教学内容.md",
                "--template", "${input:selectPptTemplate}",
                "--output_dir", "workspace/output",
                "--trace"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "测试PPT生成API (上传模板)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tests/test_api_ppt_generation.py",
            "args": [
                "--template", "${input:selectPptTemplate}",
                "--markdown", "${input:selectMarkdownFile}",
                "--download",
                "--output", "workspace/output/test_api_output.pptx"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "测试PPT生成API (使用模板ID)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tests/test_api_ppt_generation.py",
            "args": [
                "--template-id", "${input:templateId}",
                "--markdown", "${input:selectMarkdownFile}",
                "--download",
                "--output", "workspace/output/test_api_output.pptx"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "测试模板管理API",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tests/test_api_template_management.py",
            "args": [
                "full-test",
                "--template", "${input:selectPptTemplate}",
                "--no-delete"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "测试模板上传API",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tests/test_api_template_management.py",
            "args": [
                "upload",
                "--template", "${input:selectPptTemplate}",
                "--name", "测试上传模板${input:templateSuffix}",
                "--description", "通过VSCode调试菜单上传的测试模板",
                "--tags", "测试,API,VSCode",
                "--enable-tracking"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "运行当前测试文件",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${file}",
                "-v"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "purpose": ["debug-test"]
        }
    ],
    "compounds": [
        {
            "name": "启动完整后端服务",
            "configurations": ["启动FastAPI后端服务", "启动Celery Worker"]
        }
    ],
    "inputs": [
        {
            "id": "markdownFile",
            "type": "promptString",
            "description": "Markdown文件路径",
            "default": "tests/testfiles/技术思维五导教学内容.md"
        },
        {
            "id": "templateFile",
            "type": "promptString",
            "description": "PPT模板文件路径",
            "default": "tests/testfiles/黄色小清新文艺工作总结ppt模板.pptx"
        },
        {
            "id": "outputDir",
            "type": "promptString",
            "description": "输出目录",
            "default": "workspace/output"
        },
        {
            "id": "selectPptTemplate",
            "type": "pickString",
            "description": "选择PPT模板文件",
            "options": [
                "tests/testfiles/黄色小清新文艺工作总结ppt模板.pptx",
                "tests/testfiles/蓝绿色商务简约年终工作总结汇报PPT模板.pptx",
                "tests/testfiles/Iphone16Pro.pptx"
            ]
        },
        {
            "id": "templateSuffix",
            "type": "promptString",
            "description": "模板名称后缀",
            "default": ""
        },
        {
            "id": "templateId",
            "type": "promptString",
            "description": "请输入要使用的模板ID (确保API服务已启动并已上传模板)",
            "default": "1"
        },
        {
            "id": "selectMarkdownFile",
            "type": "pickString",
            "description": "选择Markdown文件",
            "options": [
                "tests/testfiles/技术思维五导教学内容.md"
            ]
        }
    ]
} 