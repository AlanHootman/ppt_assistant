{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "运行PPT工作流",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/run_workflow.py",
            "args": [
                "--markdown", "tests/testfiles/技术思维五导教学内容.md",
                "--template", "tests/testfiles/黄色小清新文艺工作总结ppt模板.pptx",
                "--output_dir", "workspace/output",
                "--trace"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "运行PPT工作流(自定义)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/run_workflow.py",
            "args": [
                "--markdown", "${input:markdownFile}",
                "--template", "${input:templateFile}",
                "--output_dir", "${input:outputDir}"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "运行PPT离线解析器",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/ppt_analyzer_offline.py",
            "args": [
                "analyze",
                "tests/testfiles/黄色小清新文艺工作总结ppt模板.pptx",
                "-o", "workspace/ppt_cache",
                "-f"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "运行所有测试",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/tests/run_tests.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "purpose": ["debug-test"]
        },
        {
            "name": "运行当前测试文件",
            "type": "python",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${file}",
                "-v"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "purpose": ["debug-test"]
        }
    ],
    "compounds": [],
    "inputs": [
        {
            "id": "markdownFile",
            "type": "promptString",
            "description": "Markdown文件路径",
            "default": "tests/testfiles/MCP介绍.md"
        },
        {
            "id": "templateFile",
            "type": "promptString",
            "description": "PPT模板文件路径",
            "default": "tests/testfiles/Iphone16Pro.pptx"
        },
        {
            "id": "outputDir",
            "type": "promptString",
            "description": "输出目录",
            "default": "workspace/output"
        }
    ]
} 